<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btDemo01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinearLayout Vertical"/>

    <Button
        android:id="@+id/btDemo02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinearLayout Horizontal"/>

    <Button
        android:id="@+id/btRelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RelativeLayout 01"/>

    <Button
        android:id="@+id/btRelativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RelativeLayout 02"/>

</LinearLayout>